<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jacademie.projet1.domain">
	<class name="Album" table="ALBUM">
	
		<composite-id>
			<key-property name="idAlbum" column="ID" type="integer" />
			<key-property name="artiste" column="ID_ARTISTE"/>
		</composite-id>
		
		<properties name="AlbumKey" unique="true">
            <property name="idAlbum" />
            <property name="artiste"/>
        </properties>

		<property name="nom" type="string">
			<column name="NOM" length="80" not-null="true" />
		</property>

		<set name="chansons" lazy="false" cascade="all,delete-orphan">
			<key>
				<column name="ID_ALBUM" />
				<column name="ID_ARTISTE" />
			</key>
			<one-to-many class="Chanson" />
		</set>

	</class>
</hibernate-mapping>