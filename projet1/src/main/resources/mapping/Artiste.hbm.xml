<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jacademie.projet1.domain">
	<class name="Artiste" table="ARTISTE">

		<id name="idArtiste" type="integer">
			<column name="ID" />
		</id>

		<property name="nom" type="string">
			<column name="NOM" length="80" not-null="true" />
		</property>

		<set name="albums" lazy="false" cascade="all,delete-orphan">
			<key column="ID_ARTISTE" not-null="true" />
			<one-to-many class="Album" />
		</set>

	</class>
	
</hibernate-mapping>