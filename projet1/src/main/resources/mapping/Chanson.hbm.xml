<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jacademie.projet1.domain">
	<class name="Chanson" table="CHANSON">

		<composite-id >
			<key-property name="idChanson" column="ID" type="integer" />
			<key-property name="album" column="ID_ALBUM" type="integer" />
		</composite-id>


		<property name="titre" type="string">
			<column name="TITRE" length="80" not-null="true" />
		</property>

		<property name="dureeChanson" type="integer">
			<column name="DUREE" not-null="true" />
		</property>


	</class>
</hibernate-mapping>