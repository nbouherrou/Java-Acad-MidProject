package org.jacademie.projet1.domain;

import java.util.Collection;


public class Album {
	
	private Integer idAlbum;
	
	private String nom;
	
	private Collection<Chanson> chansons;
	
	private Artiste artiste;

	public Album() {
		super();
	}

	public Album(Integer codeAlbum, String nom, Collection<Chanson> chansons,
			Artiste artiste) {
		super();
		this.idAlbum = codeAlbum;
		this.nom = nom;
		this.chansons = chansons;
		this.artiste = artiste;
	}

	@Override
	public String toString() {
		StringBuilder builder = new StringBuilder();
		builder.append("Album [codeAlbum=");
		builder.append(idAlbum);
		builder.append(", nom=");
		builder.append(nom);
		builder.append(", chansons=");
		builder.append(chansons);
		builder.append(", artiste=");
		builder.append(artiste);
		builder.append("]");
		return builder.toString();
	}

	public Integer getCodeAlbum() {
		return idAlbum;
	}

	public void setCodeAlbum(Integer codeAlbum) {
		this.idAlbum = codeAlbum;
	}

	public String getNom() {
		return nom;
	}

	public void setNom(String nom) {
		this.nom = nom;
	}

	public Collection<Chanson> getChansons() {
		return chansons;
	}

	public void setChansons(Collection<Chanson> chansons) {
		this.chansons = chansons;
	}

	public Artiste getArtiste() {
		return artiste;
	}

	public void setArtiste(Artiste artiste) {
		this.artiste = artiste;
	}
	
	
	
}
